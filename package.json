{
  "name": "minibase-control-flow",
  "version": "0.1.2",
  "description": "Plugin for [minibase][] and [base][] that adds control flow methods `.serial` and `.parallel` to your application, based on [each-promise][]",
  "repository": "node-minibase/minibase-control-flow",
  "author": "Charlike Mike Reagent <@tunnckoCore> (http://www.tunnckocore.tk)",
  "precommit.silent": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard --verbose",
    "pretest": "npm run lint",
    "test": "npm run coverage",
    "posttest": "npm run lint:coverage",
    "coverage": "nyc node test.js",
    "lint:coverage": "nyc check-coverage --lines 100 --branches 100 --statements 100 --functions 100",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "precommit": "git add --all",
    "commit": "git-cz"
  },
  "dependencies": {
    "each-promise": "^1.0.2",
    "extend-shallow": "^2.0.1",
    "lazy-cache": "^2.0.2",
    "minibase-create-plugin": "^1.0.2"
  },
  "devDependencies": {
    "commitizen": "~2.7.0",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "1.1.5",
    "is-promise": "^2.1.0",
    "minibase": "^1.0.0",
    "minibase-tests": "^1.1.2",
    "mukla": "^0.4.8",
    "nyc": "^9.0.1",
    "pre-commit": "^1.1.3",
    "standard": "^8.5.0",
    "standard-version": "^3.0.0"
  },
  "files": [
    "index.js",
    "utils.js"
  ],
  "keywords": [
    "base",
    "baseplugin",
    "callback",
    "cb",
    "concurrency",
    "control",
    "controlflow",
    "ctrl",
    "each",
    "flow",
    "flowcontrol",
    "mini",
    "minibase",
    "minibaseplugin",
    "parallel",
    "promise",
    "promises",
    "serial",
    "series"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3,
      "footer": ""
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "highlight": "each-promise",
      "list": [
        "minibase",
        "minibase-tests",
        "minibase-create-plugin",
        "minibase-visit",
        "minibase-results",
        "minibase-is-registered",
        "minibase-better-define",
        "each-promise",
        "always-done",
        "try-catch-callback"
      ]
    },
    "reflinks": [
      "assert-kindof",
      "base",
      "commitizen",
      "each-promise",
      "is-kindof",
      "kind-of",
      "minibase",
      "standard-version",
      "verb",
      "verb-generate-readme",
      "async-done",
      "collection-visit",
      "try-catch-core"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
